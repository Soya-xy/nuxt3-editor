{
  "extends": "@antfu",
  "ignorePatterns": ["!pages/public"],
  "overrides": [
    {
      "files": ["locales/**.json"],
      "rules": {
        "jsonc/sort-keys": "error"
      }
    }
  ],
  "rules": {
    "vue/no-restricted-syntax":["error", {
      "selector": "VElement[name='a']",
      "message": "Use NuxtLink instead."
    }],
    "vue/valid-v-slot": "off",
    "no-console": "off"
  }
}
